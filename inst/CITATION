citHeader("To cite package 'crandatapkgs' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "crandatapkgs: Find Data-only Packages on CRAN",
         author = personList(as.person("Thomas J. Leeper")),
         year = year,
         note = vers,
         textVersion =
         paste("Thomas J. Leeper. (",
               year,
               "). crandatapkgs: Find Data-only Packages on CRAN. ",
               vers, ".", sep=""))